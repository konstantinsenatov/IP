extends ../layouts/default

block variables
	- const title = "IP";

block content
	.wrapper
		include ../../blocks/modules/header/header

		include ../../blocks/modules/sidebar-icons/sidebar-icons
		.page
			include ../../blocks/modules/menu/menu
			.content
				.content__container
					.people(style='display:flex; flex-direction:column;height:100%;')
						.people__title.general-title Сотрудники бюро
						.people__header(style='padding-bottom: 40px')
							.people__header--search.search
								.people__header--icon.search--icon
									img(src="img/svg/search-orange.svg", alt="alt")
								.people__header--input.search--input
									input(type="text" placeholder='Найти сотрудника')

							.people__header--btns
								a(href="people-lists.html").people__header--btn.people__header--btn1
									svg(width='26' height='24' viewBox='0 0 26 24' fill='none' xmlns='http://www.w3.org/2000/svg')
										path(d='M0 1H26M0 12H26M0 23H26' stroke='#CFEDFF' stroke-width='2')
