									svg(width='26' height='26' viewBox='0 0 26 26' fill='none' xmlns='http://www.w3.org/2000/svg')
										path(d='M1 1H10V10H1V1ZM1 16H10V25H1V16ZM16 1H25V10H16V1ZM16 16H25V25H16V16Z' stroke='#CFEDFF' stroke-width='2')

						.people__person.person
							.person__container
								.person__row
									.person__img
										img(src="img/man-big.jpg", alt="alt")
									.person__body
										.person__name Юлия Чекмарева
										.person__position советник, руководитель практики Private Clients
										.person__city Москва
										.person__contacts
											.person__contacts--left
												.person__contacts--item
													.person__contacts--icon
														img(src="img/svg/people-person/1.svg", alt="alt")
